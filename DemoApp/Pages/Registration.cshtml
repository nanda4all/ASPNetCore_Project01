@page
@model DemoApp.Pages.RegistrationModel
@{
}
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.png" class="img-fluid"
                     alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form  method="post">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">First Name </label>
                        <input type="text" id="form3Example3" asp-for="RegistrationUser.FirstName" class="form-control form-control-lg" />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Last Name</label>
                        <input type="text" id="form3Example3" asp-for="RegistrationUser.LastName" class="form-control form-control-lg"/>
                    </div>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Email address</label>
                        <input type="email" id="form3Example3" asp-for="RegistrationUser.UserName" class="form-control form-control-lg"
                               placeholder="Email address" />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="form3Example4">Password</label>
                        <input type="password" id="form3Example4" asp-for="RegistrationUser.Password" class="form-control form-control-lg"
                               placeholder="Enter password" />
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <input type="submit" value="Register" class="btn btn-primary" style="padding-left: 2.5rem; padding-right: 2.5rem;" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
<style type="text/css">
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom {
        height: calc(100% - 73px);
    }
</style>